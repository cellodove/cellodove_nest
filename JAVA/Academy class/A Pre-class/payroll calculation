
package project1;

import java.util.Scanner;

public class main {
	
	
	static int 급여계산 (int 사원코드 , int 근무시간){
		int 급여;
		int 시급=0;
		
		if(사원코드  == 1){
			시급 = 100;
		}
		else if(사원코드 == 2){
			시급 = 200;
		}
		else if(사원코드 == 3){
			 시급 = 250;	
		}
		
		return 급여 = 근무시간 * 시급;
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner SC = new Scanner(System.in);
		System.out.print("사원코드와 근무시간을 입력하세요: ");
		int 사원코드 = SC.nextInt();
		int 근무시간 = SC.nextInt();
		System.out.print(급여계산(사원코드,근무시간));
		System.out.print("원");
	}

}
