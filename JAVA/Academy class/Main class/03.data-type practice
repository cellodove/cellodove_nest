package A2020_05_14;

public class Main {

	public static void main(String[] args) {

		int binary = 0b00110001;
		System.out.println("정수형의 binary 리터럴:" + binary);
		System.out.println(" ");

		int octValue = 012;
		System.out.println("8진수의 정수값:" + octValue);
		System.out.println(" ");

		int hexValue = 0xA;
		System.out.println("16진수의 정수값: " + hexValue);
		System.out.println(" ");

		long cardNumber = 1234_5678_9102_3456L;
		Long securityNumber = 999_99_9999L;
		System.out.println("카드 번호: " + cardNumber);
		System.out.println("보안 번호: " + securityNumber);
		System.out.println(" ");

		float f = 1.0f / 3.0f;
		double d = 1.0 / 3.0;
		int i = 1 / 3;

		System.out.println("float 값  =" + f);
		System.out.println("double 값 =" + d);
		System.out.println("int 값 = " + i);
		System.out.println(" ");

		System.out.println("2가 4보다 작은가? " + (2 < 4));
		System.out.println(" ");

		String str = "문자열 출력";
		System.out.println(str);

	}

}
